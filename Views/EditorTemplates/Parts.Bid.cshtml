<fieldset class="what">
    @Html.LabelFor(m => m.BidPrice, T("Bid"))
    @Html.TextBoxFor(m => m.BidPrice, new { id = "bidform-currency", @class = "bid-text", Value = (Model.BidPrice > 0 ? Model.BidPrice.ToString() : "") })
    @Html.HiddenFor(m => m.BidedOn)
</fieldset>

